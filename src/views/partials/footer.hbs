{{!-- This module is used in main File ( Contains validation to
registered/unregistered users ) --}}
<!-- Footer -->
<footer class="page-footer font-small unique-color-dark pt-4">
    <!-- Footer Elements -->
    <div class="container">
    {{!-- If exist a current user (Logged) store this footer --}}
    {{#if user}}
        <!-- Call to action -->
        <ul class="list-unstyled list-inline text-center py-2">
        <li class="list-inline-item">
            <h5 class="mb-1">Welcome to My notes App!</h5>
        </li>
        <li class="list-inline-item">
            <a href="/notes" class="btn btn-outline-white btn-rounded">Look a view to your notes</a>
         </li>
        </ul>
        <!-- Call to action -->
    </div>
    {{!-- But, if user is signing up (Unregister) store this footer --}}
    {{else if footertrue}}
    <!-- Footer Elements -->
    <!-- Call to action -->
    <ul class="list-unstyled list-inline text-center py-2">
      <li class="list-inline-item">
        <h5 class="mb-1">Log in your account</h5>
      </li>
      <li class="list-inline-item">
        <a href="/users/signup" class="btn btn-outline-white btn-rounded">Sign in!</a>
      </li>
    </ul>
    <!-- Call to action -->
  </div>
  <!-- Footer Elements -->

    <!-- Footer Elements -->
    {{else}} {{!-- If user is in another route, store this footer (user is unregister) --}}
    <!-- Call to action -->
    <ul class="list-unstyled list-inline text-center py-2">
      <li class="list-inline-item">
        <h5 class="mb-1">Register for free</h5>
      </li>
      <li class="list-inline-item">
        <a href="/users/signup" class="btn btn-outline-white btn-rounded">Sign up!</a>
      </li>
    </ul>
    <!-- Call to action -->
  </div>
  <!-- Footer Elements -->
    {{/if}}

  <!-- Copyright -->
  <div class="footer-copyright text-center py-3">© 2020 Copyright:
    <a href="https://github.com/BillyVector117"> Billy Rodríguez M. - Github</a>
  </div>
  <!-- Copyright -->

</footer>
<!-- End Footer -->