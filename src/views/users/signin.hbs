{{!-- Sign-Form structure  --}}
<div class="row">
    <div class="col-md-4 mx-auto mt-4">
        <div class="card mx-auto">
            <div class="card-header mx-auto">
                <h2>Account Login</h2>
            </div>
            <img src="/img/img1.png" class="rounded-circle mx-auto d-block m-4 logo" alt="Logo">
            <div class="card-body">
                <form action="/users/signin" method="POST"> {{!-- send data to /users/signin with POST method--}}
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="password" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Log in </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>