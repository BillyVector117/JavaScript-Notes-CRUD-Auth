{{!-- For each note in database make this structure iteration --}}
<div class="row">
    {{#each notes}}
        <div class="col-md-3 mt-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{!--'_id' is a property (mongoDB) of each 'notes' iteration UPDATE/EDIT BUTTON--}}
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p> {{!-- note's property --}}
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST"> {{!--send data to /notes/delete/:id (DELETE Button) with DELETE method (method-override) --}}
                        <input type="hidden" name="_method" value="DELETE"> {{!-- hidden input to send DELETE request --}}
                    <button class="btn btn-danger btn-block btn-sm" type="submit"> Delete </button> 
                </form>
                </div>
            </div>
        </div>
        {{else}}
        {{!-- If documents does not been created yet --}}
        <div class="card mx-auto mt-4">
            <div class="card-body">
                <h1>Hello {{ user.name }} ! </h1> {{!-- user.name is global variable from ( res.locals.user )--}}
                <p class="lead"> There are not notes yet!</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create a new Note!</a>
            </div>
        </div>
    {{/each}}
</div>

